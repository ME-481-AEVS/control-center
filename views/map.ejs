            crossorigin=""></script>
    <style>
      #map {
        height: 100%;
      }
      #overlay {
        position: absolute;
        z-index: 500;
        width: 380px;
        height: 320px;
        top: 10%;
        right: 5%;
        border-radius: 10px;
        background-color: #ffffff;
        color: #252525;
        font-size: 20px;
        padding: 5px;
        opacity: 90%;
      }
